
<div class="container">
  <div class="align-center">
    <h1>ARTICLES</h1>
  </div>
  <div class="functions">
    <p><%=  link_to "Add a new article", new_article_path %></p>
    <form action="/articles" method="get">
      <label for="article[:id]">Please enter the Article id </label>
      <input type="text" name="article[:id]" placeholder="example - 12" class="search-id">
    </form>
  </div>
  <div class="article-display">

  <% @articles.each do |article|  %>

    <div class="col-xs-12 col-md-6">
      <div class="card">

        <h2> [<%= article.id %>]<%= article.title %> </h2>
        <p>Description: </p>
        <p> <%= article.description %> </p>
        <%=  link_to "view more", article_path(article) %>
      </div>
    </div>

  <%end%>
  </div>
</div>
